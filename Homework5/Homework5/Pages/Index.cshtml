@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-start">
    <h1>Calculator</h1>
    <div>
        <form method="post">
            <div class="row">
                <div class="col mb-2">
                    <input type="number" asp-for="Number1" value="0" class="form-control" placeholder="Number 1" required>
                </div>
                <div class="col mb-2">
                    <input type="number" asp-for="Number2" value="0" class="form-control" placeholder="Number 2" required>
                </div>
            </div>
            <div>
                <select class="form-control mb-2" asp-for="Operation">
                    <option selected>Arithmetic Operation</option>
                    <option value="sum">+</option>
                    <option value="subtraction">-</option>
                    <option value="multiplication">*</option>
                    <option value="division">/</option>
                </select>
            </div>
            @if (!string.IsNullOrEmpty(Model.Result))
            {
                <div class="alert alert-primary mb-2" role="alert">@Model.Result</div>
            }
            <button class="btn btn-primary" type="submit">=</button>
        </form>
    </div>
</div>

